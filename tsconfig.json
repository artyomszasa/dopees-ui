{
  "compilerOptions": {
    "lib": ["es6", "dom", "esnext.asynciterable"],
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "inlineSourceMap": true,
    "baseUrl": ".",
    "paths": {
        "@polymer/*": [ "node_modules/@polymer/*" ],
        "dopees-core/*": [ "node_modules/dopees-core/*" ]
    },
    "experimentalDecorators": true,
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": ["**/__tests__/*"]
}